<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Stephen Tetley 2019</Copyright>
    <Version>1.0.0-alpha-20190721</Version>
    <Authors>Stephen Tetley</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/stephentetley/factx-fsharp</PackageProjectUrl>
    <Description>Library to generate Prolog and Answer Set facts</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="FactX\Internal\Common.fs" />
    <Compile Include="FactX\Syntax.fs" />
    <Compile Include="FactX\Pretty.fs" />
    <Compile Include="FactX\FactOutput.fs" />
    <Compile Include="FactX\FactWriter.fs" />
    <Compile Include="FactX\Skeletons.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FParsec" Version="1.0.4-RC3" />
    <PackageReference Include="SLFormat" Version="1.0.2-alpha-20190721" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
